<footer class="mx-auto flex flex-col justify-between mt-auto text-center border-t border-gray-200 py-4">
    <%= link_to root_path do %>
      <%= image_tag 'mailpals_logo_rect.png', alt: 'MailPals Logo', class: 'w-24 mx-auto mb-4' %>
    <% end %>
    <% if current_user.present? %>
      <div class="flex flex-col text-xs items-center gap-2">
        <div class="grid items-center items-center">
          <span class="subtitle">Logged in as: <%= current_user.email %></span>
        </div>
        <%= button_to "Log out", Current.session, method: :delete, class: "button minimal danger", data: { turbo_confirm: "Are you sure you want to log out?" } %>
      </div>
    <% else %>
      <%= link_to "Log in", sign_in_path, class: "button outline success" %>
    <% end %>
</footer>